{
    "schema": "http://json-schema.org/draft-07/schema",

    "type": "object",
    "properties" : {
        "$schema":{"type":"string"},
        "id":{"type":"integer"},
        "title":{"type":"string"},
        "owner":{"type":"integer"},
        "private":{"type":"boolean"},
        "watchDate":{"type":"string",
                    "format":"date"},
        "rating":{"type":"integer",
                "minimum":0,
                "maximum":10},
        "favorite":{"type":"boolean"}

    },
    "dependences":{
        "watchDate":{
            "properties":{
                "private":"true"
            }
        }
    },
    "additionalProperties":false,
    "required":["id","title","owner","private"]
}